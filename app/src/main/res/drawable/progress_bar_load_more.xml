<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:duration="1"
    android:toDegrees="1080">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="15">

        <gradient
            android:centerColor="@color/red_base"
            android:endColor="@color/red_base"
            android:startColor="@color/red_base"
            android:angle="0"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>


