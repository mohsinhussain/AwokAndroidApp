<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.awok.moshin.awok.Activities.DisputeDetails">
<LinearLayout
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">







    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:text="Dispute No:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/disputeNo"
            android:textSize="16sp"
            android:text="Dispute No:"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />







    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:text="Dispute  Status:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/disputeStatus"
            android:textSize="16sp"
            android:textColor="#00CC00"
            android:text="Dispute No:"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />







    </LinearLayout>






    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="@color/light_gray"
            android:text="Reminder:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView



android:id="@+id/rem"

            android:textSize="16sp"

            android:text="takes 2 days to resolve "

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />







    </LinearLayout>




</LinearLayout>
    <LinearLayout
android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/modify"
            android:layout_margin="5dp"
            android:background="@color/red_base"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:text="Modify"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <Button
            android:layout_margin="5dp"
            android:background="@color/red_base"
            android:text="Cancel Dispute"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_dispute" />







    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/progress_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/marker_progress"
            android:indeterminateDrawable="@drawable/progress_bar_load_more"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:text="Loading.."
            android:textColor="@color/normal_text"
            android:textSize="12sp"/>

    </LinearLayout>
</RelativeLayout>
