        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:background="@drawable/product_cell_bg">

            <LinearLayout
                android:id="@+id/timerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/timerImageView"
                    android:src="@drawable/timer_icon"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/timerTextView"
                    android:text="19hrs.32min.12sec"
                    android:textColor="@color/light_gray"
                    android:textSize="10sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_below="@+id/timerLayout"
                android:id="@+id/imageHolderLayout"
                android:layout_centerHorizontal="true" >

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:id="@+id/load_progress_bar"
                    android:indeterminateDrawable="@drawable/progress_bar_load_more"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/itemImageView"/>

                    <View
                        android:id="@+id/overLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/button_text"
                        android:layout_alignLeft="@+id/itemImageView"
                        android:layout_alignRight="@+id/itemImageView"
                        android:layout_alignTop="@+id/itemImageView"
                        android:layout_alignBottom="@+id/itemImageView"/>



                </RelativeLayout>
            </FrameLayout>






