        <TextView
            android:id="@+id/OverViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="title"
            android:textColor="@color/normal_text"
            android:textSize="14sp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_alignTop="@+id/imageHolderLayout"
            android:layout_toRightOf="@+id/imageHolderLayout"

             />

        <LinearLayout
            android:id="@+id/priceLay"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/sellerLabelText"

            >
            <TextView
                android:id="@+id/overviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="@color/light_gray"
                android:layout_alignBottom="@+id/sellerLabelText"
                android:layout_toLeftOf="@+id/quantity"
                />
        <TextView
            android:layout_weight="1"
            android:id="@+id/newPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text=""
            android:textColor="@color/red_base"


            android:layout_alignTop="@+id/overviewText"
             />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quantity_count"
            android:background="#eeeeee"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/sellerLabelText"
            android:layout_alignRight="@+id/priceLay"
            android:layout_alignEnd="@+id/priceLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">
            <Button
                android:layout_gravity="center"
                android:id="@+id/quantity_dec"
                android:background="#eeeeee"
                android:textColor="@color/dialog_button_cancel"
            android:textStyle="bold"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"/>
        <EditText
            android:layout_width="50dp"

            android:layout_height="fill_parent"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#333333"

            android:cursorVisible="true"
android:maxLength="2"

            android:imeActionLabel="Update"
            android:gravity="center"

            android:background="#FFFFFF"
            style="@style/_EditText"
            android:id="@+id/quantity"


            android:layout_below="@+id/sellerLabelText"
            android:layout_alignRight="@+id/priceLay"
            android:layout_alignEnd="@+id/priceLay" />
            <Button
                android:layout_gravity="center"
                android:id="@+id/quantity_inc"
                android:background="#eeeeee"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/dialog_button_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="+"/>
<!--
        android:imeOptions="actionDone"
-->
            </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_below="@+id/main_prodRatingBar"
android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearLayout"
    >

    <CheckBox
        android:visibility="gone"
        android:id="@+id/cross"
android:button="@drawable/checkbox_btn_check_holo_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />


</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="desc"
            android:textColor="#666"
            android:id="@+id/totalPrice"
            android:layout_below="@+id/quantity_count"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="In Stock : 25 Items"
            android:gravity="center_vertical"
            android:id="@+id/stock"
            android:textSize="12dp"
            android:textColor="@color/light_gray"
            android:layout_marginTop="40dp"

            android:layout_below="@+id/quantity_count"
            android:layout_alignRight="@+id/quantity_count"
            android:layout_alignEnd="@+id/quantity_count" />

        <Button
            android:id="@+id/sellerLabelText"
            android:layout_below="@+id/OverViewTitle"
            android:layout_alignLeft="@+id/OverViewTitle"
            android:background="@drawable/custom_background_green"
            android:layout_width="36dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="17dp"
            android:text="@string/discount"
            android:maxHeight="0dp"
            android:textColor="#ffffff"
            android:paddingLeft="4dp"
            android:gravity="left|center_vertical"
            android:textSize="12dp"
            />

        <TextView
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="[ REMOVE ]"
            android:textColor="@color/light_gray"
            android:id="@+id/remove"
            android:layout_alignLeft="@+id/imageHolderLayout"
            android:layout_alignRight="@+id/imageHolderLayout"
            android:layout_below="@+id/imageHolderLayout"/>

