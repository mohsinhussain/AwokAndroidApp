<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:background="@color/button_text"
    android:layout_height="match_parent"
    >

    <RelativeLayout
                    android:id="@+id/main"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/sellerMainLay"
    android:layout_width="fill_parent"
    android:background="@color/button_text"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sellerLabel"
            android:paddingRight="20dp"
            android:background="@drawable/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/seller"
            android:maxHeight="0dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:layout_gravity="center_vertical"
            android:id="@+id/sellerNameText" />
    </LinearLayout>
<!--<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/edittext_color"/>-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <View
            android:id="@+id/mainDivider"
            android:layout_below="@+id/sellerLabel"
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="1dp"/>
</LinearLayout>
</LinearLayout>
        <View
            android:id="@+id/sellerDivider"
            android:layout_below="@+id/sellerMainLay"
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="1dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageHolderLayout"
            android:layout_below="@+id/sellerDivider" >

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:id="@+id/load_progress_bar"
                android:indeterminateDrawable="@drawable/progress_bar_load_more"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/mainImg"
                android:src="@drawable/test"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/OverViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:padding="8dp"
            android:text="title"
            android:textColor="#222"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/imageHolderLayout"
            android:layout_toRightOf="@+id/imageHolderLayout"

             />
        <TextView
            android:id="@+id/overviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_marginRight="10dp"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="desc"
            android:textColor="#666"


            android:layout_below="@+id/OverViewTitle"
            android:layout_toLeftOf="@+id/newPrice"
            android:layout_toStartOf="@+id/newPrice" />
        <TextView
            android:id="@+id/newPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="8dp"




            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="desc"
            android:textColor="@color/primary"


            android:layout_alignTop="@+id/overviewText"
             />
        <EditText
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="#333333"

            android:cursorVisible="true"
android:maxLength="2"

            android:imeActionLabel="Update"
            android:gravity="center"

            android:background="@drawable/edit_text_background"
            style="@style/_EditText"
            android:id="@+id/quantity"

            android:layout_below="@+id/overviewText"
            android:layout_toLeftOf="@+id/stock"
            android:layout_toStartOf="@+id/stock" />
<!--
        android:imeOptions="actionDone"
-->

<LinearLayout

    android:layout_width="wrap_content"
    android:layout_below="@+id/imageHolderLayout"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linearLayout">

    <CheckBox
        android:id="@+id/cross"
android:button="@drawable/checkbox_btn_check_holo_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="[ REMOVE ]"
        android:id="@+id/textView4"
        android:layout_below="@+id/stock"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />



</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="desc"
            android:textColor="#666"
            android:id="@+id/totalPrice"
            android:layout_below="@+id/quantity"
            />

        <TextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/quantity"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="In Stock : 25 Items"
            android:gravity="center_vertical"


            android:id="@+id/stock"
            android:textSize="10dp"

            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


