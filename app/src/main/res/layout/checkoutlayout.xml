<RelativeLayout
    android:layout_below="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">









    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edittext_color"/>

<LinearLayout
    android:id="@+id/subtotalLay"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">






    <TextView
        android:text="Sub Total"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:text="AED 2000"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>



    <LinearLayout
        android:id="@+id/shipLay"
        android:layout_below="@+id/subtotalLay"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">





<LinearLayout

    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:text="Shipping"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <TextView
        android:text="United Arab Emirates >"
        android:padding="2dp"
        android:textSize="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

        <TextView
            android:text="AED 30"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>





    <LinearLayout
            android:layout_below="@+id/shipLay"
        android:id="@+id/totalLay"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">






        <TextView
            android:text="Total"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:text="AED 2000"
            android:textColor="@color/primary"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

<LinearLayout
    android:layout_below="@+id/totalLay"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <Button
        android:layout_gravity="right"
        android:paddingRight="5dp"
        android:background="#FFCDD2"
        android:layout_marginRight="20dp"
        android:textColor="@color/primary"
        android:text="CHECKOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>


</RelativeLayout>
</RelativeLayout>