<RelativeLayout
android:id="@+id/footer"

android:background="#fcfafa"
    android:layout_below="@+id/main"
    android:layout_width="match_parent"


    android:layout_height="match_parent">


    <View
        android:id="@+id/borderLayuot"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"/>

<RelativeLayout
    android:id="@+id/additionLay"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:layout_below="@+id/borderLayuot"
    android:background="#fcfafa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">







<LinearLayout
    android:id="@+id/subtotalLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">






    <TextView
        android:text="Sub Total"
        android:textColor="@color/light_gray"
        android:layout_weight="1"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/sellerSubTotal"
        android:text="AED 2000"
        android:layout_weight="1"
        android:textColor="#666666"
        android:gravity="right"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>



    <LinearLayout
        android:id="@+id/shipLay"
        android:layout_below="@+id/subtotalLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">





<LinearLayout

    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:text="Shipping"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <TextView
        android:text="United Arab Emirates >"
        android:paddingTop="2dp"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

        <TextView
            android:id="@+id/sellerShipping"
            android:text="AED 30"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>





    <LinearLayout
        android:layout_below="@+id/shipLay"
        android:id="@+id/totalLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">






        <TextView
            android:text="Total"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/sellerTotal"
            android:text="AED 2000"
            android:textColor="#ff3823"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


