<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_marginRight="8dp"
    android:background="#FFFFFF"
    android:layout_marginLeft="8dp"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/sellerMainLay"
            android:layout_width="fill_parent"
            android:background="#e0e0e0"

            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sellerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="5dp"
                />



            <!-- <View
                 android:id="@+id/sellerDivider"
                 android:layout_below="@+id/sellerLabel"
                 android:layout_width="match_parent"
                 android:background="#607D8B"
                 android:layout_height="1dp"/>-->
        </LinearLayout>
        <View
            android:id="@+id/sellerDivider"
            android:layout_below="@+id/sellerMainLay"
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="1dp"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageHolderLayout"
            android:layout_below="@+id/sellerDivider" >

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:id="@+id/load_progress_bar"
                android:indeterminateDrawable="@drawable/progress_bar_load_more"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/mainImg"
                android:src="@drawable/test"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />
        </FrameLayout>



        <TextView
            android:id="@+id/OverViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:padding="8dp"
            android:text="title"
            android:textColor="#222"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/imageHolderLayout"
            android:layout_toRightOf="@+id/imageHolderLayout" />

        <TextView
            android:id="@+id/overviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="description"
            android:textColor="#666"
            android:textStyle="bold"
            android:textSize="15dp"


            android:layout_below="@+id/quantity"
            android:layout_alignLeft="@+id/qtyText"
            android:layout_alignStart="@+id/qtyText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Qty : "
            android:padding="8dp"
            android:id="@+id/qtyText"
            android:layout_below="@+id/OverViewTitle"
            android:layout_alignLeft="@+id/OverViewTitle"
            android:layout_alignStart="@+id/OverViewTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:textColor="#333333"
            android:layout_marginLeft="10dp"


            android:text=""
            android:id="@+id/quantity"

            android:layout_alignTop="@+id/qtyText"
            android:layout_toRightOf="@+id/qtyText"
            android:layout_toEndOf="@+id/qtyText" />


        <!--<TextView
