        <android.support.v4.view.ViewPager
            android:id="@+id/imageSlider"
            android:layout_width="fill_parent"
            android:layout_height="200dp">
        </android.support.v4.view.ViewPager>

        <View
            android:layout_width="fill_parent"
            android:background="#eeeeee"

            android:layout_margin="10dp"
            android:layout_height="1dp"/>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Samsung Galaxy Tab 4 SM-T535, 10.1 Inch Screen, 16GB Internal Storage, 4G Wifi Network, Black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/main_prodRatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:numStars="5"
                        android:rating="2.0"
                        android:stepSize="1.0" />

                    <TextView
                        android:id="@+id/product_reviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"

                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="(1234)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#039BE5" />


                </LinearLayout>

                <TextView
                    android:id="@+id/prod_warranty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="1 Year Warranty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#BDBDBD" />

            <!--</LinearLayout>-->

