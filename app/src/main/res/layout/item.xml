<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/parentPanel"
    android:background="#fff"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#fff"
            >


            <TextView
                android:id="@+id/percentTextView"
                android:text="50%"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:textColor="#fff"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:background="#FF4081"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/itemImageView"
                android:layout_toRightOf="@+id/percentTextView"
                android:layout_toLeftOf="@+id/likeImageView"
                android:layout_alignParentTop="true" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/likeImageView"
                android:background="@drawable/heart"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameTextView"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="2dp"
                android:layout_below="@+id/itemImageView"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceTextView"
                android:textSize="12sp"
                android:padding="2dp"
                android:textStyle="bold"
                android:layout_below="@+id/nameTextView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oldPriceTextView"
                android:textSize="10sp"
                android:textStyle=""
                android:textColor="#999"
                android:padding="2dp"
                android:background="@drawable/dashed_text_view"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/priceTextView"
                android:layout_below="@+id/nameTextView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endsInTextView"
                android:textSize="12sp"
                android:padding="2dp"
                android:textColor="#999"
                android:layout_below="@+id/priceTextView"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>