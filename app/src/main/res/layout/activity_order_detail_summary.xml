<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"

    android:layout_height="fill_parent">
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_content"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                android:theme="@style/GalaxyZooThemeToolbarDarkOverflow"
                app:layout_scrollFlags="scroll|enterAlways"/>

         </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>









<!--                android:layout_marginLeft="8dp"-->




    </android.support.design.widget.CoordinatorLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/main_content"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="#C7EFE7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#16A084"
                android:padding="10dp"
                android:text="Thank you for your Order"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="18sp"
                android:textColor="#16A084"
                android:text="Your Order Number"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




            <TextView
                android:id="@+id/order_no"
                android:textColor="#16A084"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




            <TextView
                android:id="@+id/responseData"
                android:padding="15dp"
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="#EAEAEA"
            android:layout_width="fill_parent"
            android:layout_height="15dp"/>



        <LinearLayout
            android:background="#D9D9D9"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold"
                android:padding="15dp"
                android:text="Order Information"
                android:textColor="#5c5c5c"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Order Date:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/orderDate"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Order Status:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/orderStatus"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Payment Type:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/payType"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Order Amount:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/orderAmount"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>






        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold"
                android:padding="15dp"
                android:text="Customer Information"
                android:textColor="#5c5c5c"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Name:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/name"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Phone/Mobile:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Email:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/email"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>










        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#D9D9D9"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold"
                android:padding="15dp"
                android:text="Delivery Information"
                android:textColor="#5c5c5c"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Emirate/City:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/emirateCity"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <TextView
                    android:layout_weight="5"
                    android:textColor="#6c6c6c"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text="Street:"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/street"
                    android:layout_weight="8"
                    android:textColor="#333333"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>










<View
    android:background="@color/line_seperator"
    android:layout_width="fill_parent"
    android:layout_height="1dp"/>







        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



            <Button
                android:background="@color/border"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="PRINT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <Button
                android:background="@color/red_base"
                android:textColor="#FFFFFF"
android:layout_weight="2"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="CONTINUE SHOPPING"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </LinearLayout>

</ScrollView>
</RelativeLayout>